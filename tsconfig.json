{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
  
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
  
      "declaration": true,
      "declarationDir": "dist",
      "emitDeclarationOnly": true,
      "outDir": "dist",
  
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
  }
  